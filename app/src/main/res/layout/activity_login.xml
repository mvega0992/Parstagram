<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:background="@color/polling_background_color"
    android:id="@+id/relativeLayout"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textNoSuggestions"
        android:background="@color/polling_background_selected_color"
        android:textColorHint="@color/polling_result_unhighlighted_option_text_color"
        android:textColor="@color/black" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_et"
        android:layout_marginBottom="10dp"
        app:passwordToggleEnabled="true"
        android:hint="@null"
        app:passwordToggleTint="@color/polling_result_unhighlighted_option_text_color">

        <EditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:textColorHint="@color/polling_result_unhighlighted_option_text_color"
            android:background="@color/polling_background_selected_color"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:inputType="textPassword"
            android:textColor="@color/black" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_text_input_layout"
        android:background="@drawable/button_border_2"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/polling_result_unhighlighted_option_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:fitsSystemWindows="false"
        android:scaleType="center"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@drawable/nav_logo_whiteout"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>