<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list"
    android:id="@+id/relativeLayout"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textNoSuggestions"
        android:background="#20FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:textColor="#FFFFFF"
        android:cursorVisible="true"
        android:textCursorDrawable="@null" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_et"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:passwordToggleEnabled="true"
        android:hint="@null"
        app:passwordToggleTint="#80FFFFFF">

        <EditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:textColorHint="#80FFFFFF"
            android:background="#20FFFFFF"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:cursorVisible="true"
            android:textCursorDrawable="@null" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_text_input_layout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_border_colorful"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#80FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:fitsSystemWindows="false"
        android:scaleType="center"
        android:scaleX="2"
        android:scaleY="2"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/nav_logo_whiteout"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"/>

    <View style="@style/Divider"
        android:layout_above="@id/layoutSignUp"
        android:backgroundTint="#40FFFFFF"/>

    <include layout="@layout/item_sign_up_colorful"
        android:id="@+id/layoutSignUp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#20FFFFFF"
        android:textColor="#80FFFFFF"/>

</RelativeLayout>